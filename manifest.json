{
  "manifest_version": 2,

  "name": "Download Sorter",
  "description": "This extension allows the user to sort and choose where downloads are saved depending on their file format.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html"
  }
}